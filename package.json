{
  "name": "premia-contracts",
  "private": true,
  "version": "1.0.0",
  "description": "Premia Finance options markets",
  "keywords": [
    "hardhat",
    "waffle",
    "solidity",
    "smart-contracts",
    "ethereum",
    "ether",
    "eth",
    "buidler",
    "wow"
  ],
  "license": "BUSL-1.1",
  "main": "index.js",
  "repository": "https://github.com/PremiaFinance/premia-contracts.git",
  "author": "Premia",
  "scripts": {
    "chain": "hardhat node --hostname 0.0.0.0",
    "compile": "hardhat compile",
    "compile:force": "hardhat compile --force",
    "postinstall": "yarn compile",
    "deploy": "hardhat deploy",
    "deploy:kovan": "hardhat run \"./scripts/deploy/testnet/0001-deployV2Kovan.ts\" --network kovan",
    "deploy:bsc": "hardhat run \"./scripts/deploy/testnet/0002-deployV2BSC.ts\" --network bsc",
    "deploy:ropsten": "hardhat run \"./scripts/deploy/testnet/0003-deployV2Ropsten.ts\" --network ropsten",
    "deploy:rinkeby": "hardhat run \"./scripts/deploy/testnet/0004-deployV2Rinkeby.ts\" --network rinkeby",
    "test": "hardhat test",
    "contract-size": "yarn run hardhat size-contracts",
    "prepare": "husky install",
    "prettier": "prettier --write --ignore-path .gitignore ."
  },
  "lint-staged": {
    "*.{md,js,ts,sol}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@ethereum-waffle/mock-contract": "^3.4.4",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.4",
    "@premia/utils": "^0.0.4",
    "@solidstate/abdk-math-extensions": "^1.0.0",
    "@solidstate/contracts": "^0.0.52",
    "@solidstate/hardhat-4byte-uploader": "^1.0.2",
    "@solidstate/hardhat-test-short-circuit": "^1.0.2",
    "@solidstate/library": "^0.0.52",
    "@solidstate/spec": "^0.0.52",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/chai-almost": "^1.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/utf8": "^3.0.1",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "abdk-libraries-solidity": "3.1.0",
    "base64-sol": "^1.1.0",
    "chai": "^4.3.7",
    "chai-almost": "^1.0.1",
    "dotenv": "^16.0.3",
    "eth-permit": "^0.2.3",
    "ethers": "5.7.2",
    "hardhat": "2.12.5",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-artifactor": "^0.2.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-spdx-license-identifier": "^2.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "prettier-plugin-solidity": "^1.1.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4",
    "utf8": "^3.0.0"
  }
}
